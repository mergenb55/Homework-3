#include<stdio>
#include<stdlib>

void main()
{   printf("[----- [Bayarbat Mergen] [2020039087] -----]\n");
    int list[5];                            				//배열 선언
    int *plist[5];                         				//포인터 배열 선언

    plist[0]=(int *)malloc(sizeof(int));    				//동적 메모리 할당

    list[0]=1;                             				//배열의 첮 번째 값을 1으로 초기화
    list[1]=100;                            				//배열의 두 번째 값을 100으로 초기화

    *plist[0]=200;                          				//포인터 배열의 첮 번째 값 200으로 초기화

    printf("value of list[0] =        %d\n", list[0]);             	//배열 리스트의 첮 번째 값 출력
    printf("address of list[0] =      %p\n", &list[0]);                 //배열 리스트의 첮 뻔째 주소 출력          
    printf("value of list =           %p\n", list);                     //리스트의 값 출력                
    printf("address of list (&list) = %p\n", &list);                    //리스트의 주소 출력               

    printf("----------------------------------------------------\n\n");
    printf("value of list[1] =   %d\n", list[1]);                       //리스트의 두 번째 값 출력
    printf("address of list[1] = %p\n", &list[1]);                      //리스트의 두 번째 주소 출력
    printf("address of *(list+1) =  %d\n", *(list+1));                  //포인터가 가리키는 리스트의 주소 출력                         
    printf("address of list+1 =  %p\n", list+1);                        //리스트의 두 번째 주소 출력               

     printf("----------------------------------------------------\n\n");
     printf("value of *plist[0] = %d\n",           *plist[0]);          //포인터 배열의 첮번째 값 출력
     printf("&plist[0] =          %p\n",           &plist[0]);          //배열의 첮 번째 주소
     printf("&plist =             %p\n",              &plist);          //배열의 주소
     printf("plist =              %p\n",               plist);          //배열의 값
     printf("plist[0] =           %p\n",            plist[0]);          //배열의 첮 번째 값
     printf("plist[1] =           %p\n",            plist[1]);          //배열의 두 번째 값
     printf("plist[2] =           %p\n",            plist[2]);          //배열의 세 번째 값
     printf("plist[3] =           %p\n",            plist[3]);          //배열의 네 번째 값
     printf("plist[4] =           %p\n",            plist[4]);          //배열의 다섯 번째 값

     free(plist[0]);            //동적 메모리 해제
}
